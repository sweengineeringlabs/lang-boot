# Example environment configuration for Rustboot applications
# Copy this file to .env and update values for your environment
# Never commit .env to version control

# Application Configuration
APP_NAME=rustboot-app
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8080

# Database Configuration (PostgreSQL)
DATABASE_URL=postgres://rustboot:rustboot_password@postgres:5432/rustboot_db
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=2
DATABASE_CONNECT_TIMEOUT=30
DATABASE_IDLE_TIMEOUT=600
DATABASE_MAX_LIFETIME=1800

# For local development (outside Docker)
# DATABASE_URL=postgres://rustboot:rustboot_password@localhost:5432/rustboot_db

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_MAX_CONNECTIONS=10
REDIS_CONNECTION_TIMEOUT=5

# For local development (outside Docker)
# REDIS_URL=redis://localhost:6379

# Cache Configuration
CACHE_TTL=3600
CACHE_ENABLED=true

# Session Configuration
SESSION_SECRET=change-this-to-a-random-secret-key-in-production-use-at-least-32-chars
SESSION_TIMEOUT=3600
SESSION_COOKIE_NAME=rustboot_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=Lax

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_ENABLED=true

# Logging Configuration
RUST_LOG=info,rustboot=debug
LOG_FORMAT=json
LOG_LEVEL=info

# Observability
METRICS_ENABLED=true
TRACING_ENABLED=true
HEALTH_CHECK_ENABLED=true

# OpenTelemetry (optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
# OTEL_SERVICE_NAME=rustboot-app

# JWT Configuration (if using authentication)
JWT_SECRET=another-random-secret-key-for-jwt-signing-at-least-32-chars
JWT_EXPIRATION=3600
JWT_ALGORITHM=HS256

# Email Configuration (if using email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@rustboot.dev

# AWS Configuration (if using AWS services)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_BUCKET=your-bucket-name

# Feature Flags
FEATURE_API_V2=false
FEATURE_EXPERIMENTAL=false

# Development Settings
DEV_MODE=true
HOT_RELOAD=false

# Production Settings (uncomment for production)
# APP_ENV=production
# SESSION_COOKIE_SECURE=true
# RUST_LOG=warn,rustboot=info
# DEV_MODE=false
